{
  "name": "polyman-cli",
  "version": "2.2.2",
  "description": "Polyman is a CLI tool that will allow codeforces problem setters to never get out of their coding environment to create a new problem. You can create, test, or update your problems and then submit them to polygon directly from your terminal.",
  "author": "Hamza Hassanain",
  "license": "MIT",
  "homepage": "https://hamzahassanain.github.io/polyman/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HamzaHassanain/polyman.git"
  },
  "main": "cli.js",
  "bin": {
    "polyman": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "!dist/**/*.test.*",
    "!dist/demo-logger.*",
    "!dist/actions-old.*",
    "!dist/actions-refactored.*",
    "assets/checkers/*.cpp",
    "template/**/*",
    "!template/**/*.pdf",
    "README.md",
    "LICENCE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "watch": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docs": "typedoc",
    "docs:serve": "npm run docs && npx http-server docs -p 8080 -o",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/node": "^24.10.0",
    "@types/ora": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "better-docs": "^2.7.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdoc": "^4.0.5",
    "jsdoc-babel": "^0.5.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2"
  }
}
