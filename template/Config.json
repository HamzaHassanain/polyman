{
  "name": "my-problem-template",
  "description": "A template for creating a problem on Codeforces Polygon.",

  "timeLimit": 1000,
  "memoryLimit": 256,
  "inputFile": "stdin",
  "outputFile": "stdout",
  "interactive": false,

  "tags": ["implementation", "math"],

  "statements": {
    "english": {
      "encoding": "UTF-8",
      "name": "My Problem Template",
      "legend": "./statements/english/legend.tex",
      "input": "./statements/english/input-format.tex",
      "output": "./statements/english/output-format.tex",
      "notes": "./statements/english/notes.tex"
    },
    "russian": {
      "encoding": "UTF-8",
      "name": "Шаблон моей проблемы",
      "legend": "./statements/russian/legend.tex",
      "input": "./statements/russian/input-format.tex",
      "output": "./statements/russian/output-format.tex",
      "notes": "./statements/russian/notes.tex"
    }
  },

  "solutions": [
    {
      "name": "main",
      "source": "./solutions/acc.cpp",
      "tag": "MA",
      "sourceType": "cpp.g++17"
    },
    {
      "name": "correct2",
      "source": "./solutions/acc2.java",
      "tag": "OK",
      "sourceType": "java.11"
    },
    {
      "name": "tle_solution",
      "source": "./solutions/tle.py",
      "tag": "TL",
      "sourceType": "python.3"
    }
  ],

  "generators": [
    {
      "name": "gen-random",
      "source": "./generators/gen.cpp"
    }
  ],

  "checker": {
    "name": "custom_checker",
    "source": "./checker/chk.cpp",
    "testsFilePath": "./checker/checker_tests.json",
    "isStandard": false
  },

  "validator": {
    "name": "validator",
    "source": "./validator/val.cpp",
    "testsFilePath": "./validator/validator_tests.json"
  },

  "testsets": [
    {
      "name": "tests",
      "generatorScript": {
        "commands": [
          {
            "index": 1,
            "type": "manual",
            "manualFile": "./tests/manual/sample1.txt",
            "group": "samples"
          },
          {
            "index": 2,
            "type": "manual",
            "manualFile": "./tests/manual/sample2.txt",
            "group": "samples"
          },
          {
            "type": "generator-single",
            "generator": "gen-random",
            "number": 3,
            "group": "main"
          },
          {
            "type": "generator-single",
            "generator": "gen-random",
            "number": 4,
            "group": "main"
          },
          {
            "type": "generator-range",
            "generator": "gen-random",
            "range": [5, 10],
            "group": "main"
          }
        ]
      },
      "groupsEnabled": true,
      "groups": [
        {
          "name": "samples"
        },
        {
          "name": "main"
        }
      ]
    }
  ]
}
